{{#partial "content"}}
    <section class="container-fluid">
        <div class="row justify-content-md-center">
            <div class="col-sm-auto">
                <h2>Create New User</h2>
            </div>
        </div>
    </section>
    <div class="row justify-content-md-center">
        <div class="col-sm-12 col-md-8 col-lg-6">
            <ul class="nav nav-tabs" id="forms-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="human-tab" data-toggle="tab" href="#human" role="tab"
                       aria-controls="human" aria-selected="true">Human</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="system-tab" data-toggle="tab" href="#system" role="tab" aria-controls="system"
                       aria-selected="false">System</a>
                </li>
            </ul>
            <div class="tab-content" id="forms-tabContent" style="padding-top: 1rem">
                <div class="tab-pane fade show active" id="human" role="tabpanel" aria-labelledby="human-tab">
                    <div class="col">
                        <form class="form confirmed-form" action="/users/human" method="post" autocomplete="off"
                              data-cnf-title="Create New User"
                              data-cnf-text="Are you sure that you want to create a new user?">
                            <div class="form-group">
                                <label for="email">Email address</label>
                                <input type="email" class="form-control" id="email" name="email" maxlength="250"
                                       placeholder="abc@abc.com" aria-describedby="emailHelp" required>
                                <small id="emailHelp" class="form-text text-muted">This wil be used to login the
                                    user</small>
                            </div>
                            <div class="form-group">
                                <label for="name">Full Name</label>
                                <input type="text" pattern="[a-zA-Z0-9 ]+" class="form-control" id="name" name="name"
                                       maxlength="250" placeholder="Firstname Lastname" aria-describedby="nameHelp"
                                       required>
                                <small id="nameHelp" class="form-text text-muted">Full name of the user</small>
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password"
                                       pattern="(?=^.{12,40}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"
                                       class="form-control" id="password" name="password" maxlength="250"
                                       aria-describedby="passwordHelp" required>
                                <small id="passwordHelp" class="form-text text-muted">Password must be min 12
                                    characters, contain one lowercase, one upper-case one number and one special
                                    character</small>
                            </div>
                            <button type="submit" class="btn btn-sm btn-primary">Create</button>
                        </form>
                    </div>
                </div>
                <div class="tab-pane fade" id="system" role="tabpanel" aria-labelledby="system-tab">
                    <div class="col">
                        <form class="form confirmed-form" action="/users/system" method="post" autocomplete="off"
                              data-cnf-title="Create New System User"
                              data-cnf-text="Are you sure that you want to create a new user?">
                            <div class="form-group">
                                <label for="systemId">System ID</label>
                                <input type="text" class="form-control" id="systemId" name="systemId" maxlength="250" pattern="[a-zA-Z0-9\-_]+"
                                       placeholder="somesystem" aria-describedby="systemIdHelp" required>
                                <small id="systemIdHelp" class="form-text text-muted">This is the id for the client system that will access your system</small>
                            </div>
                            <div class="form-group">
                                <label for="systemName">System Name</label>
                                <input type="text" pattern="[a-zA-Z0-9 ]+" class="form-control" id="systemName" name="systemName"
                                       maxlength="250" placeholder="Awesome Client System" aria-describedby="systemNameHelp"
                                       required>
                                <small id="systemNameHelp" class="form-text text-muted">Full name of the user</small>
                            </div>
                            <div class="form-group">
                                <label for="systemMaintainerEmail">Maintainer Email address</label>
                                <input type="email" class="form-control" id="systemMaintainerEmail" name="systemMaintainerEmail" maxlength="250"
                                       placeholder="abc@abc.com" aria-describedby="systemMaintainerEmailHelp" required>
                                <small id="systemMaintainerEmailHelp" class="form-text text-muted">System maintainer's email address</small>
                            </div>
                            <button type="submit" class="btn btn-sm btn-primary">Create</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/partial}}

{{> common/base}}