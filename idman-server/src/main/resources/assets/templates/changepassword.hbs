{{#partial "content"}}
    {{#with user}}
        <section>
            <div class="row justify-content-sm-center">
                <div class="col">
                    <h3 class="text-center">Change Password for {{name}}</h3>
                </div>
            </div>
            <div class="row justify-content-sm-center">
                <div class="col-sm-12 col-md-6">
                    <form class="form" autocomplete="off" method="post" action="{{#if ../skipOld}}/users/{{userId}}/update/password/forced{{else}}/users/{{userId}}/update/password{{/if}}">
                        {{#if ../skipOld}}
                        {{else}}
                            <div class="form-group">
                                <label for="oldPassword">Old Password</label>
                                <input type="password"
                                       pattern="^[A-Za-z0-9 @%*!#&*]{12,255}$"
                                       class="form-control" id="oldPassword" name="oldPassword" maxlength="255"
                                       aria-describedby="oldPasswordHelp" required>
                                <small id="oldPasswordHelp" class="form-text text-muted">Enter your old password</small>
                            </div>
                        {{/if}}
                        <div class="form-group">
                            <label for="newPassword">New Password</label>
                            <input type="password"
                                   pattern="^[A-Za-z0-9 @%*!#&*]{12,255}$"
                                   class="form-control" id="newPassword" name="newPassword" maxlength="255"
                                   aria-describedby="newPasswordHelp" required
                                   onchange="if(this.checkValidity()) form.newPasswordConf.pattern = this.value;">
                            <small id="newPasswordHelp" class="form-text text-muted">Password must be min 12
                                characters, contain one lowercase, one upper-case one number and one special
                                character</small>
                        </div>
                        <div class="form-group">
                            <label for="newPasswordConf">Confirm New Password</label>
                            <input type="password"
                                   pattern="(?=^.{12,255}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"
                                   class="form-control" id="newPasswordConf" name="newPasswordConf" maxlength="255"
                                   aria-describedby="newPasswordConfHelp" required
                                   onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Please enter the same Password as above' : '');">
                            <small id="newPasswordConfHelp" class="form-text text-muted">Re-enter password</small>
                        </div>
                        <button type="submit" class="btn btn-primary float-right">Change Password</button>
                    </form>
                </div>
            </div>

        </section>
    {{/with}}
{{/partial}}

{{> common/base}}