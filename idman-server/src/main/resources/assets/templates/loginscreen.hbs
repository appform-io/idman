{{#partial "content"}}
  <div class="row justify-content-md-center">

      <div class="col-sm-12 col-md-4">
          <form method="post" action="/auth/login/password">
              <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" aria-describedby="emailHelp" maxlength="255" required>
                  <small id="emailHelp">Enter your registered email id</small>
              </div>
              <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" maxlength="255" id="password" name="password" required>
                  <small id="emailHelp">Enter your password</small>
              </div>
              <input type="hidden" name="serviceId" value="{{serviceId}}">
              <input type="hidden" name="redirect" value="{{redirect}}">
              <input type="hidden" name="clientSessionId" value="{{clientSessionId}}">
              <button class="btn btn-lg btn-success" type="submit">Login</button>
          </form>
      </div>
  </div>
{{/partial}}

{{> common/base}}